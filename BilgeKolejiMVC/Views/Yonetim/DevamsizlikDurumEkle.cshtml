@using System.Web.Optimization
@model BilgeKolejProject.DevamsizlikDurum

@{
    ViewBag.Title = "Devamsizlik Durumu Ekle";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
}

<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <h4><i class="icon-reorder"></i>@ViewBag.Title</h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="control-group">
                        <label class="control-label">
                            @Html.LabelFor(model => model.DurumAdi)
                        </label>
                        <div class="controls">
                            @Html.EditorFor(model => model.DurumAdi, new { @class = "span6 m-wrap" })
                            @Html.ValidationMessageFor(model => model.DurumAdi, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn purple">Kaydet</button>
                        <a href="@Url.Action("OgretmenDurumListesi")" class="btn">Ä°ptal</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}
