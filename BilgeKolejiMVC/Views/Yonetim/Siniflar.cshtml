@model IEnumerable<BilgeKolejProject.Siniflar>

@{
    ViewBag.Title = "Sinif Listesi";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
}


<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <h4><i class="icon-edit"></i>@ViewBag.Title</h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <form action="@Url.Action("SinifEkle","Yonetim")" method="get">
                            <button id="sample_editable_1_new" class="btn green">
                                Yeni Kayıt Ekle <i class="icon-plus"></i>
                            </button>
                        </form>
                    </div>
                </div>
                @if (Model.ToList().Count > 0)
                {
                    <div id="sample_1_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <table class="table table-striped table-bordered table-hover dataTable" id="sample_1" aria-describedby="sample_1_info">
                            <thead>
                                <tr role="row">
                                    <th style="width: 24px;" class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label=""><div class="checker" id="uniform-undefined"><span><input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" style="opacity: 0;"></span></div></th>
                                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="DurumAdi: activate to sort column ascending" style="width: 170px;">@Html.DisplayNameFor(model => model.SinifAdi)</th>
                                    <th class="hidden-480 sorting" role="columnheader" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="Ogretmenler: activate to sort column ascending" style="width: 116px;">Kontenjan</th>
                                    <th class="hidden-480 sorting" role="columnheader" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="Ogretmenler: activate to sort column ascending" style="width: 116px;">Sınıf Mevcudu</th>
                                    <th class="hidden-480 sorting" role="columnheader" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="Tarih: activate to sort column ascending" style="width: 310px;">@Html.DisplayNameFor(model => model.Tarih)</th>
                                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=": activate to sort column ascending">İşlemler</th>
                                </tr>
                            </thead>

                            <tbody role="alert" aria-live="polite" aria-relevant="all">
                                @foreach (var item in Model)
                                {

                                    <tr class="gradeX odd">
                                        <td class=" sorting_1"><div class="checker" id="uniform-undefined"><span><input type="checkbox" class="checkboxes" value="1" style="opacity: 0;"></span></div></td>
                                        <td class=" ">@item.SinifAdi</td>
                                        <td class="hidden-480 ">@item.Kontenjan</td>
                                        <td class="hidden-480 ">@item.Ogrenciler.Count</td>
                                        <td class="center hidden-480 ">@item.Tarih</td>

                                        <td class="center">
                                            <a href="@Url.Action("SinifSil", new { Id = item.ID })" class=" class="btn mini red" title="Sil"><i class="icon-remove icon-white"></i></a> &nbsp;
                                            <a href="@Url.Action("SinifDuzenle", new { Id = item.ID })" class=" class="btn mini green" title="Düzenle"><i class="icon-edit icon-white"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-success">
                        <button class="close" data-dismiss="alert"></button>
                        <strong>Bildiri!</strong> Kayıtlar Bulunamadı.
                    </div>
                }

            </div>
        </div>
    </div>
</div>
@section App{
    App.setPage("table_managed");
}
